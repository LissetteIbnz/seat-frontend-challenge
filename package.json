{
  "name": "seat-code-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all -p start:server start:client",
    "start:server": "json-server --watch data/db.json --port 3001",
    "start:client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:related": "npm run test -- -o --watchAll=false",
    "test:coverage": "npm run test -- --watchAll=false --coverage=true",
    "lint": "eslint src --ext js,jsx,ts,tsx",
    "lint:fix": "npm run lint -- --fix",
    "prettify": "prettier --write src/**/*.{js,jsx,ts,tsx,css,scss,sass}",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "formik": "^2.2.9",
    "framer-motion": "^5.5.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-paginate": "^8.1.0",
    "react-router-dom": "^6.2.1",
    "react-table": "^7.7.0",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.17",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-table": "^7.7.9",
    "@types/styled-components": "^5.1.19",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "json-server": "^0.17.0",
    "lint-staged": "^12.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react-scripts": "5.0.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/?!(ignore-me|ignore-me-too)"
    ],
    "moduleNameMapper": {
      "^test-utils$": "<rootDir>/src/test-utils.tsx"
    },
    "collectCoverageFrom": [
      "src/**/{!({*.{scene,stories},index,reportWebVitals,test-utils}),}.{js,jsx,ts,tsx}"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
